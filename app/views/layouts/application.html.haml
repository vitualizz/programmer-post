!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ProgrammerPost
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag    ["devise/sessions", "devise/registrations", "devise/confirmations", "devise/mailer", "devise/passwords", "devise/shared", "devise/unlocks", "users"].include?(params[:controller]) ? 'devise' : params[:controller], media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag    ["devise/sessions", "devise/registrations", "devise/confirmations", "devise/mailer", "devise/passwords", "devise/shared", "devise/unlocks", "users"].include?(params[:controller]) ? 'devise' : params[:controller], media: 'all', 'data-turbolinks-track': 'reload'
  %body
    .wrapper
      = render partial: 'shared/menu'
      #content
        = yield
